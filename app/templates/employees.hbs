{{!--outlet--}}
<form>
    <div class="row">
        <div class="col">
        <input type="text" class="form-control" placeholder="Nome">
        </div>
        <div class="col">
        <input type="text" class="form-control" placeholder="Email">
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary">Novo Funcionario</button>
        </div>
    </div>
</form>
<br>
<div id="list" class="row">
    <div class="table-responsive col-md-12">
        <table class="table table-striped table-condensed" cellspacing="0" cellpadding="0">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th class="actions">Ações</th>
            </tr>
            </thead>
            <tbody>
                {{#each model as |employees|}}
                    <tr>
                        <td>{{employees.nome}}</td>
                        <td>{{employees.email}}</td>
                        <td class="actions">
                            <button type="button" class="btn btn-warning btn-xs">Editar</button>
                            <button type="button" class="btn btn-danger btn-xs">Excluir</button>
                        </td>
                    </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
